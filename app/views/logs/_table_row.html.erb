<tr>
  <td>
    <%= log.track %>
  </td>

  <td>
    <%= log.user %>
  </td>

  <td>
    <%= log.played_at %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to log, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_log_url(log), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to log, method: :delete, data: { confirm: "Do you really want to delete this log?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
