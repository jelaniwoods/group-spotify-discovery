<tr>
  <td>
    <%= group.name %>
  </td>

  <td>
    <%= group.user %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to group, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_group_url(group), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to group, method: :delete, data: { confirm: "Do you really want to delete this group?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
