<div class="row justify-content-center mt-3 mb-3">
  <div class="col-md-10">
    <div class="card">
      <h1 class="card-header h2 d-flex align-items-center justify-content-between">
        Groups

        <%= link_to new_group_path, class: "btn btn-sm btn-outline-secondary" do %>
          <i class="fas fa-plus fa-fw"></i>
        <% end %>
      </h1>

      <div class="list-group list-group-flush">
        <%= render collection: @groups, partial: "list_item", as: :group %>
      </div>
    </div>
  </div>
</div>
