<tr>
  <td>
    <%= track.name %>
  </td>

  <td>
    <%= track.image %>
  </td>

  <td>
    <%= track.album_name %>
  </td>

  <td>
    <%= track.url %>
  </td>

  <td>
    <div class="btn-group">
      <%= link_to track, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-search-plus fa-fw"></i>
      <% end %>

      <%= link_to edit_track_url(track), class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-edit fa-fw"></i>
      <% end %>

      <%= link_to track, method: :delete, data: { confirm: "Do you really want to delete this track?" }, class: "btn btn-sm btn-outline-secondary" do %>
        <i class="fas fa-trash-alt fa-fw"></i>
      <% end %>
    </div>
  </td>
</tr>
