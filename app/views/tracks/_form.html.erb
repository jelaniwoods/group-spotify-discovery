<% was_validated = track.errors.any? %>

<% form_html_options = { novalidate: true, class: "mb-3" } %>

<%= form_for(track, html: form_html_options) do |f| %>
  <div class="form-group">
    <% name_class = "form-control" %>
    <% name_was_invalid = track.errors.include?(:name) %>

    <% if was_validated %>
      <% if name_was_invalid %>
        <% name_class << " is-invalid" %>
      <% else %>
        <% name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :name %>

    <%= f.text_field :name, class: name_class, placeholder: "Enter name" %>
    <% if name_was_invalid %>
      <% track.errors.full_messages_for(:name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% image_class = "form-control" %>
    <% image_was_invalid = track.errors.include?(:image) %>

    <% if was_validated %>
      <% if image_was_invalid %>
        <% image_class << " is-invalid" %>
      <% else %>
        <% image_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :image %>

    <%= f.text_field :image, class: image_class, placeholder: "Enter image" %>
    <% if image_was_invalid %>
      <% track.errors.full_messages_for(:image).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% album_name_class = "form-control" %>
    <% album_name_was_invalid = track.errors.include?(:album_name) %>

    <% if was_validated %>
      <% if album_name_was_invalid %>
        <% album_name_class << " is-invalid" %>
      <% else %>
        <% album_name_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :album_name %>

    <%= f.text_field :album_name, class: album_name_class, placeholder: "Enter album name" %>
    <% if album_name_was_invalid %>
      <% track.errors.full_messages_for(:album_name).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <div class="form-group">
    <% url_class = "form-control" %>
    <% url_was_invalid = track.errors.include?(:url) %>

    <% if was_validated %>
      <% if url_was_invalid %>
        <% url_class << " is-invalid" %>
      <% else %>
        <% url_class << " is-valid" %>
      <% end %>
    <% end %>

    <%= f.label :url %>

    <%= f.text_field :url, class: url_class, placeholder: "Enter url" %>
    <% if url_was_invalid %>
      <% track.errors.full_messages_for(:url).each do |message| %>
        <div class="invalid-feedback d-flex">
          <%= message %>
        </div>
      <% end %>
    <% end %>
  </div>

  <%= f.button class: "btn btn-outline-secondary btn-block" %>
<% end %>
